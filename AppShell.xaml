<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ToDoListApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ToDoListApp"
    xmlns:views="clr-namespace:ToDoListApp.Views" 
    Shell.FlyoutBehavior="Flyout"
    BackgroundColor="DarkBlue"
    Shell.BackgroundColor="DarkBlue"
    Shell.TabBarForegroundColor="DarkBlue">

    <TabBar>
        <Tab Title="Home"
            Icon="todo.png">
            <ShellContent Title="Settings"
                         Icon="addnew.png"
                         ContentTemplate="{DataTemplate views:TodoitemPage}" />
            <ShellContent Title="Test"
                         Icon="clear.png"
                         ContentTemplate="{DataTemplate local:Settings}" />
        </Tab>
        <ShellContent Title="Details"
                     Icon="theme.png"
                     ContentTemplate="{DataTemplate views:testpage}" />
    </TabBar>

</Shell>
